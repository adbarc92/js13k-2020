{
	"compilerOptions": {
    "baseUrl": "./src/",
    "target": "ES2017",
    "outDir": "src-ts",
    "outFile": "src/main.js",
    "lib": [
      "dom",
      "ES2017"
    ],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src"
	]
}